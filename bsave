#!/bin/bash

. $HOME/backup.cfg

echo ======= $myname = `date` - File backup $datestr started >$mlog

if [ ! -d $bdir ];
then
  mkdir $bdir;
  echo Create $bdir >>$mlog
fi

for i in "${bases[@]}" 
do
	tar_opt=''
	tar_dir="$basedir/$i"
	nbase=$i
	nbase=`echo $nbase|sed 's/ /_/g'`
	nbase=`echo $nbase|sed 'y/абвгджзийклмнопрстуфхыэе/abvgdjzijklmnoprstufhyee/'|sed 's/[ьъ]//g; s/ё/yo/g; s/ц/ts/g; s/ч/ch/g; s/ш/sh/g; s/щ/sh/g; s/ю/yu/g; s/я/ya/'`;
	nbase=`echo $nbase|sed 'y/АБВГДЖЗИЙКЛМНОПРСТУФХЫЭЕ/ABVGDJZIJKLMNOPRSTUFHYEE/'|sed 's/[ЬЪ]//g; s/Ё/YO/g; s/Ц/TS/g; s/Ч/CH/g; s/Ш/SH/g; s/Щ/SH/g; s/Ю/YU/g; s/Я/YA/'`;
	fbase=$nbase-$datestr.tgz

# basedir -  полный путь к исходному каталогу всех баз
# i - название подкаталога базы
#
# bdir - полный путь каталога для бэкапов
# nbase - транслитерированное название базы. Название каталога для архивов, без пути
# fbase - файл архива базы, без пути.

	if [ ! -d $bdir/$nbase ]; then
		mkdir $bdir/$nbase
		echo Create $bdir/$nbase >>$mlog
	fi
	if [ -L "$tar_dir" ]; then
		tar_opt='-h'
	fi
	tar $tar_opt  -czf $bdir/$nbase/$fbase -C$basedir "$i" 1>>/dev/null 2>>/dev/null
	if [ "$?" -eq 0 ]
	then
		echo -n $i backuped in to $bdir/$nbase/$fbase with size: >>$mlog
		echo `du -h $bdir/$nbase/$fbase | cut -f1` >>$mlog
	else
		echo $i not backuped. >>$mlog
	fi

done

echo `date` $myname - File backup $datestr finished >>$mlog

do_final;
